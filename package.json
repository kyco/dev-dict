{
  "name": "dev-dict",
  "version": "0.1.0",
  "description": "A dictionary of software related terms. Supports multiple languages.",
  "author": "Cornelius Weidmann <cornelius@kyco.io> (https://kyco.io)",
  "license": "MIT",
  "keywords": [
    "dictionary",
    "software dictionary",
    "software terms",
    "developer dictionary"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyco/dev-dict.git"
  },
  "publishConfig": {
    "provenance": true
  },
  "bugs": {
    "url": "https://github.com/kyco/dev-dict/issues"
  },
  "homepage": "https://github.com/kyco/dev-dict#readme",
  "type": "module",
  "main": "./dist/index.js",
  "unpkg": "./dist/dev-dict.min.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "validate:tags:schema": "ajv validate -s data/tags/0-SCHEMA.json -d \"data/tags/!(0-SCHEMA|1-TEMPLATE).json\" --spec=draft2020 --strict=false --allow-matching-properties",
    "validate:tags:rules": "tsx scripts/validate-tags.ts",
    "validate:tags": "pnpm run validate:tags:schema && pnpm run validate:tags:rules",
    "build": "pnpm run validate:tags && vite build && tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"This project does not have any tests which can be run yet...\"",
    "update-packages": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.1",
    "@types/node": "^24.10.0",
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2"
  }
}